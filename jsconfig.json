{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
            "#utilities/*": ["./utilities/*"],
            "#server/*": ["./server/*"],
			"#client/*": ["./server/*"],
			"#profile/*": ["./profile/*"],
			"#serverApp/*": ["./serverApp/*"],
			"#schemes/*": ["./schemes/*"],
			"#resources/*": ["./resources/*"],
			"#scripts/*": ["./scripts/*"],
			"#state/*": ["./state/*"],
			"#config/*": ["./config/*"],
			"#udsp/*": ["./udsp/*"],
        },
		"module": "ESNext",
		"moduleResolution": "nodenext",
		"target": "ESNext",
		"jsx": "react",
		"strictNullChecks": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"**/build/*",
		"**/docSource/*",
		"**/docs/*",
		"**/examples/*",
		"**/node_modules/*",
		"**/npm/*",
		"**/package/*",
		"**/target/*",
		"node_modules"
	]
}
